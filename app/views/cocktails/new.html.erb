<div class="padded">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= bootstrap_form_for(@cocktail,html: { multipart: true } ) do |f| %>
          <%= f.text_field :name %>
          <%= f.file_field :picture %>
          <%= f.submit "Create cocktail", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>