<div class="padded">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <h1>Cocktails' list</h1>
        <%= link_to "NEW", new_cocktail_path, class: "btn btn-primary"%>
        <ul class='list-unstyled'>
          <% @cocktails.each do |c| %>
            <li>
              <h3><%= c.name %></h3>
              <%= image_tag c.picture.url(:thumb) %> <%= link_to "See details", c, class: "btn btn-primary btn-xs"%>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
